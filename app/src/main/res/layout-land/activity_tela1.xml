<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relativeTela1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_marginTop="25dp"
        android:background="@drawable/image_capa_padrao"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="24dp" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="53dp"
        android:id="@+id/imageButtonTela1"
        android:onClick="botaoCadastrar"
        android:background="@drawable/botao_cadastra"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/botao_listar_conta"
        android:onClick="botaoListar"
        android:id="@+id/imageButton2Tela1"
        android:layout_alignBottom="@+id/imageButtonTela1"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />
</RelativeLayout>