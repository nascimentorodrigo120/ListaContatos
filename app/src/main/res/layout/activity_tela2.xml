<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeTela2"
    android:background="#ded9d9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LISTA DE CONTATOS:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:id="@+id/listView"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nenhum Contato Cadastrado"
        android:id="@+id/textViewListaVazia"
        android:layout_alignTop="@+id/listView"
        android:layout_marginTop="112dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="8pt"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Toque e segure um contato para mais opções"
        android:id="@+id/textView13"
        android:layout_gravity="center"
        android:textSize="7pt"
        android:layout_below="@+id/listView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>