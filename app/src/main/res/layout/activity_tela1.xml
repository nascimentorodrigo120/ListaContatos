<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exemplo.sqlite.Tela_CadastroActivity"
    android:id="@+id/relativeTela1"
    android:background="#ded9d9">


    <ImageButton
        android:layout_width="170dp"
        android:layout_height="53dp"
        android:id="@+id/imageButtonTela1"
        android:onClick="botaoCadastrar"
        android:background="@drawable/botao_cadastra"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageButton2Tela1"
        android:background="@drawable/botao_listar_conta"
        android:onClick="botaoListar"
        android:layout_below="@+id/imageButtonTela1"
        android:layout_alignLeft="@+id/imageButtonTela1"
        android:layout_alignStart="@+id/imageButtonTela1"
        android:layout_alignRight="@+id/imageButtonTela1"
        android:layout_alignEnd="@+id/imageButtonTela1"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/image_capa_padrao"
        android:layout_marginTop="30dp" />

</RelativeLayout>
