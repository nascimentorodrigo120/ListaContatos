<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exemplo.sqlite.Tela_BackupActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageButtonCriarBackup"
        android:background="@drawable/button_cria_backup"
        android:layout_marginRight="153dp"
        android:layout_marginEnd="153dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:onClick="botaoCriarBackup" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Digite o nome e a extenssao do arquivo:"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButtonCriarBackup"
        android:layout_alignStart="@+id/imageButtonCriarBackup"
        android:textSize="6pt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCaminhoBackup"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:hint="ContatosBackup.xml" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCaminhoBackup"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageButtonCriarBackup"
        android:layout_alignStart="@+id/imageButtonCriarBackup" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonImportarBackup"
        android:layout_below="@+id/editTextCaminhoBackup"
        android:layout_alignLeft="@+id/editTextCaminhoBackup"
        android:layout_alignStart="@+id/editTextCaminhoBackup"
        android:background="@drawable/button_importar_backup"
        android:layout_marginTop="10dp"
        android:onClick="botaoImportarBackup" />
</RelativeLayout>
